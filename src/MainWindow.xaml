<Window x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="iPod Notes" Height="360" Width="280" 
        Background="{StaticResource iPodBackgroundBrush}" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <DropShadowEffect x:Key="SoftShadowEffect" BlurRadius="10" ShadowDepth="1" 
                          Opacity="0.2" Direction="315" Color="#000000"/>
        
        <Style x:Key="iPodButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#007AFF"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="10"
                                Effect="{StaticResource SoftShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D8D8D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Window.Effect>
        <DropShadowEffect BlurRadius="10" ShadowDepth="1" 
                          Opacity="0.2" Direction="315" Color="#000000"/>
    </Window.Effect>
    
    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#CCCCCC" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Cabeçalho -->
            <Border Background="{StaticResource iPodHeaderBrush}" Grid.Row="0" 
                    Padding="12,10" CornerRadius="12,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Ícone de Notas -->
                    <Viewbox Width="18" Height="18" Grid.Column="0" Margin="0,0,8,0">
                        <Path Data="M3,1 L17,1 L17,19 L3,19 Z" 
                              Fill="White" Stroke="{StaticResource iPodAccentBrush}" 
                              StrokeThickness="1.5"/>
                    </Viewbox>
                    
                    <!-- Título -->
                    <TextBlock Text="iPod Notes" FontSize="16" FontFamily="Segoe UI, Arial" 
                             Foreground="{StaticResource iPodTextBrush}" 
                             Grid.Column="1" HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                    
                    <!-- Indicador de Bateria -->
                    <Viewbox Width="20" Height="10" Grid.Column="2">
                        <Canvas Width="20" Height="10">
                            <Rectangle Width="18" Height="10" Canvas.Left="0" Canvas.Top="0" 
                                       Stroke="{StaticResource iPodTextBrush}" 
                                       StrokeThickness="1" RadiusX="2" RadiusY="2" 
                                       Fill="Transparent"/>
                            <Rectangle Width="14" Height="6" Canvas.Left="2" Canvas.Top="2" 
                                       Fill="#8CC84B"/>
                            <Rectangle Width="2" Height="4" Canvas.Left="18" Canvas.Top="3" 
                                       Fill="{StaticResource iPodTextBrush}"/>
                        </Canvas>
                    </Viewbox>
                </Grid>
            </Border>
            
            <!-- Área de texto -->
            <Border Grid.Row="1" Margin="8" CornerRadius="8" 
                    Background="White" BorderThickness="1" 
                    BorderBrush="#E0E0E0">
                <TextBox Style="{StaticResource iPodTextBoxStyle}"
                        Name="NotesTextBox" Padding="8"
                        Margin="1"/>
            </Border>
            
            <!-- Barra inferior de botões -->
            <Border Grid.Row="2" Background="{StaticResource iPodHeaderBrush}" 
                    CornerRadius="0,0,12,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                            Margin="0,10,0,10">
                    <Button Content="Novo" Style="{StaticResource iPodButtonStyle}" 
                            Name="NewButton" Width="70" Margin="6"/>
                    <Button Content="Salvar" Style="{StaticResource iPodButtonStyle}" 
                            Name="SaveButton" Width="70" Margin="6"/>
                    <Button Content="Lista" Style="{StaticResource iPodButtonStyle}" 
                            Name="ListButton" Width="70" Margin="6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
